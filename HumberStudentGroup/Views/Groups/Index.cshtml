@model IEnumerable<HumberStudentGroup.ADO.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Login/Index");
    } else
    {
        ViewBag.UserId = Session["UserId"];
    }
}

<h2>Humber Study Groups</h2>
<small>
    @Html.ActionLink("Sign Out", "Signout", "Users")
</small>

<p>
    @Html.ActionLink("Create A Study Group", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desc)
        </th>
        <th>
            @Html.DisplayName("Member Count")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Desc)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Users.Count)
    </td>
    <td>
        @if (item.AuthorId == ViewBag.UserId)
        {
            @Html.ActionLink("Edit | ", "Edit", new { id = item.Id })
            @Html.ActionLink("Delete | ", "Delete", new { id = item.Id })
        }
        @Html.ActionLink("Details", "Details", new { id = item.Id })
    </td>
</tr>
}

</table>
